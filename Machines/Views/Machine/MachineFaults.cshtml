@model MachineFaultsViewModel

@{
    ViewData["Title"] = "Faults";
}

<h1>@Model.MachineName Faults</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Status</th>
            <th>Priority</th>
            <th>Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Faults)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Description </td>
                <td>@item.Status</td>
                <td>@item.Priority </td>
                <td>@item.Date.DateTime</td>
                <td>
                    @Html.ActionLink("Edit", "EditFault", "Fault", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "DeleteFault", "Fault", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
